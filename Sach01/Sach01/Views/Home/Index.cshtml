@model IEnumerable<Sach01.Models.Sach>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        .card{
            width:250px;
            border-radius:5px;
            padding:10px;
            transition:0.3s;
        }
        .card:hover{
            box-shadow: 0 8px 16px 0 rgba(232, 232, 232);
        }
        #margin-card{
            text-align:center;
            margin-top:20px;
        }
    </style>
</head>


<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/images/slide-1.jpg" alt="Los Angeles" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/images/slide-2.jpg" alt="Chicago" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/images/slide-1.jpg" alt="New york" style="width:100%;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    
    <h2>Sách mới</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3" id="margin-card">
                <div class="card">
                    @Html.DisplayFor(model => item.TenSach)
                    <img src="@Url.Content(item.HinhAnh)" style="height:200px; width:200px; margin:10px"/>
                    Price: @Html.DisplayFor(model => item.UnitGia)
                    <a href="/GioMuaHang/ThemVaoGio/@item.IdSach">
                        <img src="@Url.Content("~/images/cart1.png")" style="width:25px;height:25px" />
                    </a>
                </div>
            </div>
        }
    </div>
</div>